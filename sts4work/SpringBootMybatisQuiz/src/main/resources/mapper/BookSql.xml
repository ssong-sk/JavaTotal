<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="boot.data.BookMapperInter">
  
  <!-- 갯수출력 -->
  <select id="getTotalCount" resultType="int">
    select count(*) from book
  </select>

  <!-- insert -->
  <insert id="insertBook" parameterType="bdto">
    insert into book (bookname, writer, bookprice, bookimage, bookcompany, ipgoday)
    values(#{bookname},#{writer},#{bookprice},#{bookimage},#{bookcompany},now())
  </insert>
  
  <!-- list 출력 -->
  <select id="getAllBooks" resultType="bdto">
    select * from book where num=#{num}
  </select>
</mapper>