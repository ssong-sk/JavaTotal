package spring.day0507.rainy;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.servlet.ModelAndView;

@Controller
@RequestMapping("/shop")
public class FormDataController {
	
	
        @GetMapping("/form1")
		public String form1() {
			return "day0507/form1";
		}

        
        @PostMapping("/read1")
        public ModelAndView read1(@RequestParam String irum, @RequestParam String gender, @RequestParam String addr) {
        	
        	ModelAndView model = new ModelAndView();
        	
        	//모델에 담기
        	model.addObject("irum", irum);
        	model.addObject("gender", gender);
        	model.addObject("addr", addr);
        	
        	//포워드 (jsp있는 곳으로 이동하는것 -> 어디로 이동할 것이냐)
        	model.setViewName("day0507/result1");
        	
        	return model;
        }
        
        
        @GetMapping("/form2")
    		public String form2() {
    			return "day0507/form2";
    		}

            
            @PostMapping("/read2")
            public ModelAndView read1(@RequestParam String irum, @RequestParam String gender, @RequestParam String addr) {
            	
            	ModelAndView model = new ModelAndView();
            	
            	//모델에 담기
            	model.addObject("irum", irum);
            	model.addObject("gender", gender);
            	model.addObject("addr", addr);
            	
            	//포워드 (jsp있는 곳으로 이동하는것 -> 어디로 이동할 것이냐)
            	model.setViewName("day0507/result1");
            	
            	return model;
            }
            
            
            @GetMapping("/form3")
    		public String form3() {
    			return "day0507/form3";
    		}

            
            @PostMapping("/read3")
            public ModelAndView read3(@RequestParam String irum, @RequestParam String gender, @RequestParam String addr) {
            	
            	ModelAndView model = new ModelAndView();
            	
            	//모델에 담기
            	model.addObject("irum", irum);
            	model.addObject("gender", gender);
            	model.addObject("addr", addr);
            	
            	//포워드 (jsp있는 곳으로 이동하는것 -> 어디로 이동할 것이냐)
            	model.setViewName("day0507/result1");
            	
            	return model;
            }    
}
